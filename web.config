<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.web>
        <!-- make maxRequestLength 500MB -->
        <httpRuntime maxRequestLength="524288000"/>
    </system.web>
    <system.webServer>
        <directoryBrowse enabled="false" />
        <httpErrors existingResponse="PassThrough" />
        <rewrite>
          <rules>
            <clear />
            <!-- Rewrite rules to /public by @maartenballiauw *tnx* -->
            <rule name="TransferToPublic-StaticContent" patternSyntax="Wildcard" stopProcessing="true">
              <match url="*" />
              <conditions logicalGrouping="MatchAny">
                <add input="{REQUEST_URI}" pattern="*images*" />
                <add input="{REQUEST_URI}" pattern="*css*" />
                <add input="{REQUEST_URI}" pattern="*js*" />
              </conditions>
              <action type="Rewrite" url="public/{R:0}" />
            </rule>
            <rule name="TransferToPublic" patternSyntax="Wildcard" stopProcessing="true">
              <match url="*" />
              <action type="Rewrite" url="public/index.php" />
            </rule>
          </rules>
        </rewrite>
        <defaultDocument>
            <files>
                <clear />
                <add value="index.php" />
                <add value="index.html" />
            </files>
        </defaultDocument>
        <security>
            <requestFiltering>
                <!-- set maxAllowedContentLength to 500MB -->
                <requestLimits maxAllowedContentLength="524288000" />
            </requestFiltering>
        </secuirty>
    </system.webServer>
</configuration>
