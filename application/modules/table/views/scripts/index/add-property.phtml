<?php $this->headTitle($this->translate('Creating a property for table %s (entity %s - row %s)', $this->table, $this->partition, $this->row)) ?>

<h1><?php echo $this->translate('Creating a property for table %s (entity %s - row %s)', $this->table, $this->partition, $this->row) ?></h1>

