    <input type="text" name="value" id="value"/><br/>
    <label for="type">Property type</label>:
    <select name="type" id="type">
        <?php foreach ($this->types as $type => $string): ?>
        <option value="<?php echo $this->escape($type) ?>"><?php echo $this->escape($string) ?></option>
        <?php endforeach; ?>
